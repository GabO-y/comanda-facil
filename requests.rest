@MAIN_ROUTE = http://localhost:8080
@MENU_ROUTE = {{MAIN_ROUTE}}/menu
@PRODUCT_ROUTE = {{MAIN_ROUTE}}/product
@PRICE_LIST_ROUTE = {{MAIN_ROUTE}}/price-list


##############################################
##############################################

### busca todos os menus
GET {{MENU_ROUTE}}

### busca pelo id
GET {{MENU_ROUTE}}/1

### cria um menu
POST {{MENU_ROUTE}}
Content-Type: application/json

{
    "name": "Menu Padrão"
}

###Adiciona um item ao menu
PUT {{MENU_ROUTE}}/item
Content-Type: application/json

{
    "productId": "1",
    "menuId": "1"
}

