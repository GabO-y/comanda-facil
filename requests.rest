##############################################

### busca todas as listas de preços
GET {{PRICE_LIST_ROUTE}}

### busca lista de preços pelo id
GET {{PRICE_LIST_ROUTE}}/1

### cria uma tabela de preços
POST {{PRICE_LIST_ROUTE}}
Content-Type: application/json

{
    "name": "tabela de preços 1",
    "begin": "2020-12-11",
    "end": "2021-02-13",
    "inEffect": false    
}

### adiciona um item a uma tabela de preços pelos ids
PUT {{PRICE_LIST_ROUTE}}
Content-Type: application/json

{
    "productId": 1,
    "priceListId": 1,
    "price": 200
}

